<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myuniquemoments"
    android:versionCode="1"
    android:versionName="1.0" 
    android:installLocation="auto"> 
    

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.myuniquemoments.ActivityMainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.myuniquemoments.ActivityContacts"
            android:label="@string/title_activity_activity_contacts" >
        </activity>
        <activity
            android:name="com.example.myuniquemoments.ActivityContactList"
            android:label="@string/title_activity_activity_contact_list" >
        </activity>
        <activity
            android:name="com.example.myuniquemoments.ActivityDailyEvents"
            android:label="@string/title_activity_activity_daily_events" >
        </activity>
        <activity
            android:name="com.example.myuniquemoments.ActivityCalendar"
            android:label="@string/title_activity_activity_calendar" >
        </activity>
        <activity
            android:name="com.example.myuniquemoments.ActivityManageEvents"
            android:label="@string/title_activity_activity_manage_events" >
        </activity>
        <activity
            android:name="com.example.myuniquemoments.ActivityCreateContact"
            android:label="@string/title_activity_activity_create_contact" >
        </activity>
        <activity
            android:name="com.example.myuniquemoments.ActivityContactProfile"
            android:label="@string/title_activity_activity_contact_profile" >
        </activity>
        <activity
            android:name="com.example.myuniquemoments.ActivitySearchContacts"
            android:label="@string/title_activity_activity_search_contacts" >
        </activity>
        <activity
            android:name="com.example.myuniquemoments.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>